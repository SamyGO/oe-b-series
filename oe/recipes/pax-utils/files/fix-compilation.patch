+#ifdef __APPLE__
+char *strndup(char* str, size_t n) {
+	size_t len = strlen(str);
+	if (len <= n)
+		return strdup(str);
+
+	char* result = malloc(n + 1);
+	size_t i;
+
+	for (i = 0; i <= n; i++)
+		result[i] = str[i];
+
+	result[i] = '\0';
+
+	return result;
+}
