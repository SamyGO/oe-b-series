#!/bin/sh

if [ -e /bin/uname ]; then
    os=`/bin/uname -s`
elif [ -e /usr/bin/uname ]; then
    os=`/usr/bin/uname -s`
fi

case $os in
    Darwin)
        if [ -e /opt/local/bin/gsed ]; then
                exec "/opt/local/bin/gsed" "$@"
        elif [ -e /sw/bin/gsed ]; then
                exec "/sw/bin/gsed" "$@"
        else
                exec "gsed" "$@"
        fi
        ;;
    Linux)
        exec "/bin/sed" "$@"
        ;;
esac
